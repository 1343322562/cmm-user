.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #000;
  opacity: 0.5;
  z-index: 5;
}

.alertBox {
  position: fixed;
  top: 250rpx;
  z-index: 9999;
  height:600rpx;
  background-color: white;
  width: 90%;
  left: 5%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: flex-start;
  border-radius: 2%;
}

.alertBox .alertClose {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-top: -120rpx;
}

.alertBox .alertClose image {
  width: 100%;
  height: 100%;
}

.alertBox .alertTitle{
  color:#1DA601;
  font-size:36rpx;
  border-bottom: 1px #E6E6E6 solid;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
}
.alertBox .alertContent {
  width: 100%;
  height:80%;
  padding: 20rpx;
  padding-top: 40rpx;
  
}

.alertBox .alertContent .li{
  padding-left:60rpx;
  margin-bottom: 20rpx;
}
