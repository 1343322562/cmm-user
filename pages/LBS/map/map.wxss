.head{background-color: #fff;display: flex;padding: 15rpx 0;}
.head>.city{position: relative}
.head>.city .icon{width: 35rpx;height: 35rpx;transform: rotate(90deg);position: absolute;top: 19rpx;right:-17rpx;}
.head>.city text{display: block;width: 120rpx;line-height: 70rpx;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;padding: 0 10rpx;text-align: center;}
.head>.search{background-color: #f6f6f6;height: 70rpx;width: 690rpx;margin-left: 20rpx;border-radius: 40rpx;display: flex}
.head>.search .icon{width: 35rpx;height: 35rpx;margin: 20rpx 10rpx 0 20rpx}
.head>.search .form{width: 420rpx;height: 70rpx;line-height: 70rpx;color: #999;}
.map{width: 100%;height: 600rpx;position: relative}
.centerIcon{width: 80rpx;height: 80rpx;position: absolute;left: 50%;bottom: 50%;margin-left: -40rpx;}
.content{position: absolute;top: 700rpx;left: 0;width: 100%;bottom: 0;background-color: #fff;}
.nowLocation{padding: 20rpx;border-bottom: 1px solid #e8e8e8;}
.list .now{color: #0eaf52;padding-right: 10rpx;}
.nowLocation .cnt,.list .title{font-size: 32rpx;}
.list{padding: 0 20rpx;}
.list>.item{padding: 20rpx 0;border-bottom: 1px solid #e8e8e8;}
.list .msg,.nowLocation .msg{font-size: 25rpx;color: #777;}
.selected{position: fixed;bottom: 60rpx;right: 20rpx;color: #fff;width: 150rpx;text-align: center;line-height: 80rpx;border-radius: 40rpx;background-color: #33b66a;box-shadow: 0 0 10rpx #ddd;z-index: 10}
.nowLoactionIcon{position: absolute;top: 20rpx;right: 20rpx;width: 60rpx;height: 60rpx;background-color: #fff;border-radius: 100%;text-align: center;}
.nowLoactionIcon .icon{width: 40rpx;height: 40rpx;margin: 10rpx  0 0 10rpx;}
.size{position: absolute;width: 60rpx;height: 60rpx;line-height: 55rpx;border-radius: 10rpx;background-color: #fff;font-size: 50rpx;right: 20rpx;text-align: center;}
.size.add{top: 120rpx;}
.size.minus{top: 200rpx;}
