.goods{background-color: #fff;position: relative;padding: 20rpx;margin-bottom: 20rpx;}
.goods>.icon{background-color: #f2f2f2;border-radius: 20rpx;overflow: hidden;width: 160rpx;height: 160rpx;position: absolute;top: 20rpx;left: 20rpx;}
.goods>.info{margin-left: 180rpx;min-height: 160rpx;}
.goods>.info .name{font-size: 30rpx;}
.goods>.info .size{color: #777;font-size: 26rpx;}
.goods>.info .money{padding-top: 20rpx;}
.goods>.num{position: absolute;bottom: 40rpx;right: 30rpx;font-size:45rpx;color: #777;}
.block{background-color: #fff;margin-bottom: 20rpx;padding: 0 20rpx;}
.block.padding{padding: 20rpx;}
.block.null{margin: 0;padding-bottom: 0}
.block>.title{display: inline-block;line-height: 80rpx;}
.block>.msg{color: #777;font-size: 24rpx;}
.list{align-items: center;justify-content: center;display:flex;flex-wrap: wrap;padding:0 0 20rpx 0;}
.list>.li{width: 45%;padding: 12rpx 0;}
.list .checkbox{display: inline-block;border-radius: 100%;overflow: hidden;border: 1px solid #e8e8e8;width: 50rpx;height: 50rpx;vertical-align: middle;margin-right: 20rpx;font-size: 30rpx;}
.list .checkbox>.icon{width: 100%;height: 100%;}
.imgList{padding-bottom: 20rpx;overflow:hidden}
.imgList>.item{width: 150rpx;height: 150rpx;border-radius: 20rpx;text-align: center;line-height: 150rpx;font-size: 50rpx;overflow: hidden;border: 1px solid #f8f8f8;color: #ddd;float:left;margin-right: 20rpx;}
.imgList>.item.null{border-style: dashed;border-color: #ddd;}
.imgList>.item .icon{width: 100%;height: 100%;background-color: #f8f8f8;}
.input{border: 1px solid #e8e8e8;width: 400rpx;display: inline-block;vertical-align: middle;margin-left: 20rpx;border-radius: 20rpx;height: 80rpx;padding: 0 10rpx;}
.textarea{border: 1px solid #e8e8e8;border-radius: 20rpx;display:block;width: 670rpx;height: 60rpx;padding: 20rpx;}
.red{color: red;font-size: 34rpx;}
.submist{color: #fff;width: 100%;line-height: 100rpx;text-align: center;font-size: 32rpx;}
.right{float: right;color: #777;display: block;line-height: 80rpx;}




.changeGoodsNum{
  position: relative;
  height: 100rpx;
  background-color:white;
  margin-bottom: 10rpx;
}

.changeGoodsNum>.btn{height:65rpx;line-height:65rpx;width:200rpx;text-align:center;border-radius:10rpx;border:1px solid #d7d7d7;bottom:15rpx;right:20rpx;}

.changeGoodsNum>.btn{
  position: absolute;
}
.changeGoodsNum>.title{
  position: absolute;
  top: 32rpx;
  left: 20rpx;
  font-size: 32rpx;
}
.changeGoodsNum>.btn .form{position:absolute;top:0;height:100%;width:60rpx;font-size:40rpx;font-weight:bold;line-height:60rpx;}
.changeGoodsNum>.btn .minus{left:0;color:#999;border-right:1px solid #d7d7d7;}
.changeGoodsNum>.btn .add{right:0;color:#ff0000;border-left:1px solid #d7d7d7;}