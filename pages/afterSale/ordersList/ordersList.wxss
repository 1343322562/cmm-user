.goods{position: relative;padding: 20rpx;margin-bottom: 20rpx;}
.goods>.icon{background-color: #f2f2f2;border-radius: 20rpx;overflow: hidden;width: 160rpx;height: 160rpx;position: absolute;top: 20rpx;left: 20rpx;}
.goods>.info{margin-left: 180rpx;min-height: 160rpx;}
.goods>.info .name{font-size: 30rpx;}
.goods>.info .size{color: #777;font-size: 26rpx;}
.goods>.info .money{padding-top: 20rpx;}
.goods>.num{position: absolute;bottom: 40rpx;right: 30rpx;font-size:45rpx;color: #777;}
.li{background-color:#fff;margin-bottom: 20rpx;}
.date{line-height: 80rpx;padding: 0 20rpx;border-bottom: 1px solid #e8e8e8;}
.date>.status{color: red;float: right;font-size: 32rpx;}