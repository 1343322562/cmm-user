.head{background:linear-gradient(#de000f, 50%, #e76f00);position: relative;text-align: center;padding-bottom: 30rpx;}
.head>.icon{width: 600rpx;}
.head::before{content: "";position: absolute;bottom: -100rpx;background-color: #e76f00;height: 101rpx;width:100%;left: 0;border-radius: 0 0 50% 50%;}
.block{background-color: #e4bb7c;border-radius: 10rpx;position: relative;z-index: 10;margin-bottom: 30rpx;}
.block>.title{font-size: 32rpx;color: #553709;line-height: 100rpx;padding-left: 30rpx;}
.block>.title .status{float: right;color: #e8160f;margin-right: 20rpx;width: 150rpx;line-height: 60rpx;text-align: center;border-radius: 30rpx;margin-top: 20rpx;}
.block>.title .status.act{background:linear-gradient(#a46518, 50%, #5d3504);color: #ece9a4;}
.box{padding:0 40rpx 40rpx 40rpx;}
.user{display: flex;justify-items: center;flex-wrap: wrap;padding-left: 44rpx;}
.user>.li{border-radius: 100%;background-color: #fbecd0;color:#d39843;text-align: center;overflow: hidden;width: 90rpx;height: 90rpx;margin: 10rpx 15rpx;}
.user>.li text{display: block;line-height: 90rpx;font-size: 40rpx;}
.user>.li .icon{width: 100%;height: 100%;background-color: #e4d0ac;}
.user>.li .icon.null{width: 60rpx;height: 60rpx;margin-top: 15rpx;}
.invitation{border: none;display: block;width: 85%;margin: 20rpx auto;border-radius: 40rpx;height: 65rpx;background-color: #e8160f;color: #fff;font-size: 26rpx;line-height: 65rpx;}
.msg{display: block;text-align: center;color: #8f5100;font-size: 20rpx;padding-bottom: 40rpx;}
.blockTitle{color: #553709;font-size: 32rpx;text-align:center;padding: 40rpx 0;}
.blockTitle>text{display:inline-block;position: relative;}
.blockTitle>text::after,.blockTitle>text::before{content: "";position: absolute;top: 26rpx;width: 80rpx;background-color: #553709;height: 3rpx;}
.blockTitle>text::after{left: -100rpx;}
.blockTitle>text::before{right: -100rpx;}
.info{background-color: #fff;display: flex;flex-wrap: wrap;padding-left: 40rpx;padding-top: 40rpx;box-shadow: 5rpx 5rpx 10rpx  #ddd;border-radius: 10rpx;}
.info>.item{width: 47%;flex-grow: 0;position: relative;margin-bottom: 40rpx;}
.info .icon{width: 80rpx;height: 80rpx;position: absolute;top: 0;left: 0;}
.info text{display: block;padding-left: 90rpx;color: #553709;font-size: 26rpx;}
.info text:last-child{font-weight: bold;}
.benefit>text{display: inline-block;background:linear-gradient(-90deg,#e9ca92, 50%, #e3b879);color: #553709;padding: 15rpx 30rpx;border-radius: 40rpx;margin-right: 20rpx;margin-bottom: 20rpx;}
.form>.item{position: relative;box-shadow: 0 0 5rpx #e3b879;width: 610rpx;margin: 0 auto 40rpx auto;}
.form .name{display:block;position:absolute;left: 0;top: 0;line-height: 70rpx;text-align: center;width: 180rpx;background:linear-gradient(90deg,#e7c088, 50%, #e3af6e);color: #553709; }
.form .input{background-color: #fff;height: 70rpx;margin-left: 180rpx;width: 400rpx;padding: 0 15rpx;}
.submit{background-color: #ddd;color: #fff;line-height: 65rpx;text-align: center;border-radius: 40rpx;width: 80%;margin: 0 auto;}
.submit.act{background-color: #e80f0d;}
.pageBack{position: absolute;top: 0;left: 40rpx;font-size: 38rpx;color: #333;z-index: 100}
.pageBack>.icon{width: 20rpx;margin-right: 10rpx;vertical-align: middle;}
.pageBack>text{vertical-align: middle;}
.benefit{padding-bottom: 40rpx;}
.remind{display: block;text-align: center;padding: 20rpx 0 60rpx 0;color: #e80f0d;font-size: 24rpx;}
.mask .alert{position: absolute;top: 50%;left: 50%;width: 500rpx;margin-left: -250rpx;margin-top: -240rpx;}
.mask .alert>.icon{width:500rpx;height: 474rpx;}
.mask .openBtn{position: absolute;left: 80rpx;width: 340rpx;height: 80rpx;bottom: 54rpx;}
.mask .backPage{background-color: #ddd;color: #fff;width: 340rpx;line-height: 70rpx;border-radius: 35rpx;text-align: center;position: absolute;bottom: -110rpx;left: 50%;margin-left: -170rpx;}