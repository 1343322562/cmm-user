.content{position: absolute;background-color: #fff;top: 0;left: 0;width: 100%;height: 100%;}
.content>.icon{text-align:center;}
.content>.icon .img{width:120rpx;height:120rpx;margin-top:150rpx;}
.content>.title{text-align:center;color:#42af35;font-size:34rpx;}
.content>.orderNo{text-align:center;font-size:34rpx;padding:20rpx 0;}
.content>.orderNo .text{text-align:center;font-size:34rpx;padding:20rpx 0;}
.content>.orderNo .text:last-child{font-size:34rpx;color:#FF0000;font-weight:bold;}
.content>.btn{text-align:center;}
.content>.btn .button{border-radius:40rpx;margin:20rpx auto 40rpx auto;width:40%;height:80rpx;line-height:80rpx;background-color:#fff;font-size:28rpx;outline:none;}
.content>.btn .button.fx{color:#fff;background:linear-gradient(#f97c69, 50%, #ef3957);}
.content>.btn .button.gw{color:red;border:1px solid red}
.content>.warn{color:#999;width:90%;margin:0 auto;font-size:24rpx;}
.content>.warn .text{color:#FF0000}
.content>.security{color:#595850;background-color:#fffbe6;border:1px solid #ffe58f;width:90%;margin:60rpx auto;padding:20rpx;font-size:24rpx;}
.content>.security .icon{width:30rpx;height: 30rpx;vertical-align:middle;margin-right:10rpx;}

