/* pages/addSelfAddress/addSelfAddress.wxss */
.map {
  height: 45vh;
  width: 100%;
  position: relative;
}

/* 上拉框 */
.pullbtn {transition: all .6s ;position: absolute;bottom: 0;height: 80rpx;width: 100%;background-color: #fff;border-radius: 10rpx;box-shadow: 0 0 20rpx #aaa;}

.pullbtn .icon {transition: transform .6s ease-in-out;background-color: #eee;width: 40rpx;height: 35rpx;border-radius: 20rpx;padding: 15rpx 30rpx;margin: 10rpx 0 0 50%;transform: translate(-50%) rotate(180deg);}
.pullListIcon {transform: translate(-50%) rotate(0deg) !important;margin-top: 20rpx;}

.pullList {height: 55%;width: 100%;}

.hiddenList {transform: translateY(100%);}

.listBox {width: 100%;height: 100%;position: absolute;bottom: 0;transition: transform .6s;}

/* 配送点 list */
.item {
  width: 94%;
  border-bottom: 3rpx solid #eee;
  padding: 20rpx 3%;
}
.item .name{
  width: 100%;
  font-size: 34rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item .body{
  width: 100%;
  display: flex;
  color: #aaa;
  margin-top: 10rpx;
}
.item .body .shopImg{
  width: 115rpx;
  height: 115rpx;
  padding-right: 10rpx;
}
.item .body .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.item .body .info .address{

  font-size: 29rpx;
}
.item .body .info .content{
  font-size: 24rpx;
}

.null {
  width: 100%;
  text-align: center;
  margin-top: 95rpx;
  color: #666;
  font-size: 34rpx;

}

.searchBar {
  width: 70%;
  margin: 25rpx auto;
  text-align: center;
  padding: 10rpx 10rpx;
  border-radius: 30rpx;
  background-color: #eeee;
  position: relative;
}