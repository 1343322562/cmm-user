.pageBox{padding-top: 100rpx;}
.pageBox.act{padding-top: 90rpx;}
.head{background-color:#fff;position:fixed;height:90rpx;border-bottom:2rpx solid #e8e8e8;top: 0;left: 0;width: 100%;z-index: 50;}
.head>.act{position:absolute;left:0;bottom:0;transition: left 0.2s ease-in-out;}
.head>.act:before{content:"";height:3px;width:50%;position:absolute;left:25%;bottom:0;background-color:#f49b1e}
.head>.btn{display:flex;}
.head>.btn .view{flex-grow:1;text-align:center;color:#999;height:90rpx;line-height:90rpx;width:0px;}
.head>.btn .act2{color:#F49B1E}
.head.act{border-bottom: 1px solid #e8e8e8;}
.orderType{position: fixed;top: 0;left: 0;width: 100%;display:flex;background-color: #fff;z-index: 50;}
.orderType>.item{flex-grow: 1;line-height: 90rpx;text-align: center;}
.orderType>.item.act{color: #f49b1e;position: relative;}
.orderType>.item.act:before{content: "";position: absolute;bottom: 0;left: 20%;width: 60%;height: 6rpx;background-color: #f49b1e;}
.box{padding-bottom: 110rpx;}
.box.hide{display:none}
.list{padding-top:20rpx;}
.list>.li{background-color:#fff;margin-bottom:20rpx;padding:0 20rpx;}
.list>.li .no,.list>.li .info{height:80rpx;line-height:80rpx;}
.list>.li .status{float:right;color:red;}
.list>.li .img{border-top:1px solid #e8e8e8;border-bottom:1px solid #e8e8e8;overflow:hidden;position:relative;padding:20rpx 20rpx;min-height:105rpx;}
.list>.li .img>.li2{float:left;width:100rpx;height:100rpx;border-radius:10rpx;overflow:hidden;border:1px solid #e8e8e8;margin-right:10rpx;}
.list>.li .img>.li2 .icon{width:100%;height:100rpx;}
.list>.li .img>.right{position:absolute;top:50%;right:0;width:60rpx;height:60rpx;margin-top:-30rpx;}
.list .right image{width:100%;height:100rpx;}
.list>.li .info{color:#999;}
.list>.li .info>.money{float:right;}
.list>.li .info>.money .text{color:#FF0000;font-size:1.3em}
.list>.li .btn{border-top:1px solid #e8e8e8;overflow:hidden;padding:0;width:100%;height:100rpx;line-height:100rpx;}
.list>.li .btn>.view{float:right;margin-right:20rpx;height:70rpx;color:#F49B1E;border:1px solid #F49B1E;text-align:center;width:160rpx;border-radius:40rpx;line-height:70rpx;margin-top:15rpx;}
.list>.li .btn>.view .icon{width:40rpx;height:40rpx;vertical-align:middle;margin-right:6rpx;margin-top:-4rpx;}
.list>.li .btn>.countDown{padding-left:20rpx;color:#ff0000}
.order_null{text-align:center;padding-top:200rpx;}
.order_null>.icon{width:200rpx;height:210rpx;}
.order_null>.text{display:block;color:#777;}
.page-bottom-null{margin-top: 80rpx;}
.getCode{position:absolute;top:20%;left:50%;width:170px;text-align:center;background-color:#fff;margin-left:-85px;}
.getCode>.title{height:80rpx;line-height:80rpx;background-color:#f49b1e;color:#fff;}
.getCode>.title info{padding:20rpx 0;}
.getCode>.title info>.canvas{margin-left: 10px;}






