.top-block {
  width: 90%;
  margin: 24rpx 5%;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}
.top-block image{
  height: 110rpx;
  width: 110rpx;
  background-color: red;
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  border-radius: 6rpx;
}
.top-block .title{
  font-size: 34rpx;
  font-weight: bold;
}
.top-block .content{
  font-size: 28rpx;
  color: #999999;
  padding: 10rpx 0;
}

