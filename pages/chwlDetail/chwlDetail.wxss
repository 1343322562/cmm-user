/* pages/chwlDetail/chwlDetail.wxss */
.top-block {
  width: 90%;
  margin: 24rpx 5%;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  position: relative;
}
.top-block image{
  height: 110rpx;
  width: 110rpx;
  background-color: red;
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  border-radius: 6rpx;
}
.top-block .title{
  font-size: 34rpx;
  font-weight: bold;
}
.top-block .content{
  font-size: 28rpx;
  color: #999999;
  padding: 10rpx 0;
}

.block {
}


.list{padding-bottom: 30rpx;}
 .li{width: 700rpx;margin: 10rpx auto 20rpx auto;border-radius: 20rpx;overflow: hidden;background-color: #fff;position: relative;border: 1px solid #e8e8e8;}
 .list image{width: 100%;height: 310rpx;background-color: #eee;}
 .box{padding:20rpx;}
 .name{font-weight: bold;font-size: 30rpx;}
 .msg{color: #555;}
 .price{padding: 30rpx 0 10rpx 0;}
 .price>.now{color: red;font-weight: bold;font-size: 40rpx;}
 .price>.before{color: #666;padding-left: 20rpx;text-decoration: line-through;}
 .price>.sell{color: #666;padding-left: 30rpx;}
 .look{background: linear-gradient(90deg,#ea1543, 50%, #fa6e4f);color: #fff;width: 130rpx;line-height: 50rpx;border-radius: 25rpx;position: absolute;bottom: 30rpx;right: 20rpx;text-align: center;}
 .lookMore{background: linear-gradient(90deg,#f29c00, 50%, #ef7a00);color: #fff;line-height: 60rpx;width: 400rpx;border-radius: 30rpx;text-align: center;margin: 0 auto;}