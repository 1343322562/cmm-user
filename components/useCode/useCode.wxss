.mask{position: fixed;top: 0;left: 0;width: 100%;height: 100%;background-color: rgba(0,0,0,.7);z-index: 1000;display: none}
.mask.show{display: block}
.alertBox{position: absolute;top: 50%;left: 50%;background: #fff;text-align: center;width: 600rpx;margin:-300rpx 0 0 -300rpx;padding: 40rpx 0 60rpx 0;border-radius: 20rpx;}
.alertBox>text{display: block}
.alertBox>.title{font-size: 36rpx;padding: 0 20rpx 10rpx 20rpx;}
.alertBox>.date{color: #777;padding-bottom: 20rpx}
.alertBox>.code{padding: 0rpx;font-size: 30rpx;font-weight: bold;}
.alertBox>.canvas{margin: 20rpx auto 0 auto;}
.alertBox>.clear{position: absolute;top: -120rpx;left: 50%;width: 80rpx;height: 80rpx;margin-left: -40rpx;}