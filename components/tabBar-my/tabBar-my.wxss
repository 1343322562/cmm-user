.pageBox{padding-bottom: 20rpx;}
.block{background-color: #fff;margin-top: 15rpx;}
.block>.btn{border-bottom:1px solid #e8e8e8;position: relative;padding: 0 20rpx;line-height: 90rpx;}
.block>.btn .icon{vertical-align: middle;width: 45rpx;height: 45rpx;margin-right: 10rpx;}
.block>.btn .goRight{position: absolute;top: 50%;right: 30rpx;width: 35rpx;height: 35rpx;margin-top:-20rpx;}
.block>.btn .goRightText{position: absolute;top: 0;right: 20rpx;}
.block>.btn .fans>.num{color: #d3262b;padding: 0 10rpx;}
.block>.btn:last-child{border: none;}

.contentBox{background:linear-gradient(90deg,#ae2024, 50%, #d3262b);position:relative;padding-left: 40rpx;padding-bottom: 25rpx;}
.contentBox>.logo{width: 120rpx;height: 66rpx;margin-bottom: 30rpx;}
.contentBox>.user .img{width: 150rpx;height: 150rpx;background: #fff;border-radius: 100%;overflow: hidden;border:6rpx solid #c96f70;vertical-align: middle;}
.contentBox>.user .name{display: inline-block;color: #fff;font-size: 34rpx;padding-left: 30rpx;}

.orders{background-color:#fff;padding:0 20rpx;}
.orders>.title,.QRCode>.title{height:80rpx;line-height:80rpx;font-size:32rpx;border-bottom:1px solid #e8e8e8}
.orders>.title .goAll{float:right;color:#999;font-size:26rpx;}
.orders>.title .goAll>.icon{vertical-align: middle;width: 35rpx;height: 35rpx;margin-top: -4rpx;}
.orders>.btnList{display:flex;width:100%;}
.orders>.btnList .li{flex-grow:1;text-align:center;padding:20rpx 0;position: relative;}
.orders>.btnList .li>.text{margin-top:10rpx;font-size:26rpx;}
.orders>.btnList .li>.icon{width:60rpx;height:50rpx;}
.orders>.btnList .li>.num{color:#fff;background-color: red;position: absolute;top: 9%;left: 60%;line-height: 40rpx;padding: 0 10rpx;border-radius: 40rpx;font-size: 26rpx;min-width: 20rpx;}

.cksj{
  margin-bottom: 15rpx;
  background: #fff;
  padding: 0 20rpx;
  padding-bottom: 20rpx;
}
.cksj .title{
  height:80rpx;
  display: flex;
  align-items:center;
 
}

.cksj .title .sm{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(0,0,0,1);
  padding-left: 10rpx;
}

.cksj image{width:100%;height:100%}

.cksj>.title>.icon
{
    width: 50rpx; height: 50rpx;
}

.cksj .img{
  height: 360rpx;
  border-radius: 18rpx;
  border: 1px #e8e8e8 solid;
  background-color: #fff;
  margin-top: 2rpx;
  -webkit-box-shadow: 3px 3px 6px #ddd;
  -moz-box-shadow: 3px 3px 6px #ddd;
  box-shadow: 3px 3px 6px #ddd;

}
.btn .kefu{width: 100%;height: 100%;background: transparent;position: absolute;top: 0;left: 0;bottom: 0;opacity: 0}
.play{margin-top: 20rpx;}
.play .title{border: none}