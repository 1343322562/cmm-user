@import "../../app.wxss";
.box>.li{position:relative;left:0;width:100%;overflow:hidden;border-bottom:1px solid #e8e8e8;}
.box>.li.act{height: 230rpx;}
.box>.li.act .activity{padding-left: 30rpx;font-size: 24rpx;}
.box>.li.act .activity>.text{color: red;border: 1px solid red;border-radius: 10rpx;display: inline-block;margin-right: 10rpx;padding: 2rpx 10rpx;font-size: 20rpx;}
.box>.li:last-child{border:none}
.goods{position:relative;padding-top:15rpx;left:0;background-color:#fff; padding-bottom: 15rpx;}
.goods.act{transition: left .2s ease-in-out;}
.goods>.checkbox{width:40rpx;height:40rpx;position:absolute;top:50%;margin-top:-20rpx;left:20rpx;border:1px solid #d7d7d7;border-radius:100%;text-align:center;background-color:#fff;}
.goods>.checkbox.act{background-color:#f49b1e;border-color:#f49b1e}
.goods>.checkbox.disabled{border-color:#d7d7d7!important;background-color: #d7d7d7!important;}
.goods>.img{width:120rpx;height:120rpx;position:absolute;overflow:hidden;left:85rpx;} 
.icon{width: 100%;height: 100%;}
.goods>.info{margin-left:230rpx;min-height: 140rpx;}
.goods>.info .name{display:block;width:90%;overflow:hidden;display: -webkit-box; word-break: break-all; -webkit-box-orient: vertical; -webkit-line-clamp:2;text-overflow:ellipsis;}
.goods>.info .now{font-size:35rpx;color:#FF0000;font-weight:bold}
.goods>.info .unit{font-size:26rpx;color:red}
.goods>.info .before{color:#999;text-decoration:line-through;}
.goods>.delete{position:absolute;top:0;right:-180rpx;background-color:#f49b1e;color:#fff;height:180rpx;line-height:180rpx;width:180rpx;text-align:center;}
.goods>.btn{position:absolute;height:65rpx;line-height:65rpx;width:200rpx;text-align:center;border-radius:10rpx;border:1px solid #d7d7d7; bottom:20rpx;right:20rpx;}
.goods>.btn .form{position:absolute;top:0;height:100%;width:60rpx;font-size:40rpx;font-weight:bold;line-height:60rpx;}
.goods>.btn .form.disabled{color: #999;background-color: #f2f2f2;}
.goods>.btn .minus{left:0;color:#999;border-right:1px solid #d7d7d7;}
.goods>.btn .add{right:0;color:#ff0000;border-left:1px solid #d7d7d7;}
.liquidation{padding-left: 20rpx;position: relative;height: 100rpx;}
.liquidation>.num{color: #999;font-size:26rpx;}
.liquidation>.num .text{margin-right: 20rpx;}
.liquidation>.total{padding-top: 12rpx;}
.liquidation>.total .money{color:red;font-size: 1.2em;}
.liquidation>.btn{position: absolute;top: 0;right: 0;background-color: #f49b1e;color: #fff;text-align: center;line-height:100rpx ;width: 160rpx;}
.cartsType{position: relative;background-color: #F2F2F2;}
.cartsType>.type{line-height: 80rpx;color: #F03200;}
.cartsType>.type .icon{vertical-align: middle;width:40rpx;height: 40rpx;margin-right: 10rpx}
.cartsType>.type .text{vertical-align: middle;}

.cartsType>.delete{position: absolute;top: 0;right: 0;width: 100rpx;height: 100rpx;text-align: center;}
.cartsType>.delete .icon{width: 50rpx;height: 50rpx;margin-top: 25rpx;}


.cartsType>.select{position: absolute;line-height: 80rpx;top:0;padding-left: 30rpx;right: 0;}
.cartsType>.select .checkbox{float:left;width: 40rpx;height: 40rpx;overflow: hidden;border:1px solid #d7d7d7;border-radius:100%;text-align:center;background-color:#fff;display: block;margin-top:15rpx;}
.cartsType>.select .checkbox>.icon{width: 100%;height: 100%;float: left;}
.cartsType>.select .checkbox.act{background-color:#f49b1e;border-color:#f49b1e}
.cartsType>.select .text{padding: 0 20rpx;}


